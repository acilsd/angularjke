{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "src",
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "es2018", "dom", "esnext.asynciterable"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "webpack.config.js"]
}
